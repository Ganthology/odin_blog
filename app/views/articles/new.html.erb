<div class="container">
  <div class="row justify-content-center">
    <h1>Create new article</h1>
  </div>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control", placeholder: "Enter a title for your article"%>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :content, class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= form.text_area :content, class: "form-control", rows: 10, placeholder: "Place your content here!"%>
          </div>
        </div>
        <div class="form-group justify-content-end row">
          <%= form.submit class: "btn btn-primary btn-lg text-light rounded-lg mr-3"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
