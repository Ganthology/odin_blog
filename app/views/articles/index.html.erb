
<div class="container">
  <h1>Articles</h1>
  <% @articles.each do |article|%>
  <div class="card class row mt-3">
    <div class="card-body">
      <h5 class="card-title">Title: <%=article.title%></h5>
      <h5 class="card-title">Author: <%= @users.find_by(id: article.user_id).email %></h5>
      <p class="card-text"><%=article.content%></p>
      <p class="card-text"><small class="text-muted">Created <%= time_ago_in_words(article.created_at)%> ago</small></p>
    </div>
    <div class="card-body">
      <%= link_to "Edit", edit_article_path(article), class: "btn btn-success"%>
      <%= link_to "Delete", article_path(article), method: :delete, class: "btn btn-danger"%>
    </div>
  </div>
  <% end %>
</div>